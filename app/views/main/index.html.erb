<div class="container-fluid">
  <div class="row header">
    <div class="col-sm-10">
      <h3>Cnideria Stinger</h3>
      <h5>Reclassify Cnidarians</h5>
    </div>
    <div class="col-sm-2">
      <div class="logo">
        <%= image_tag "logo_amnh.jpg" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6">
      <div class="slider-container">
        <% @features.each do |feature| %>
          <div class="feature" id='slider-<%= feature.id %>'>
            <p></p>
            <p>
              <label for="desc"><%= feature.desc %>:</label>
              <input type="text" id="desc-<%= feature.id %>" readonly>
            </p>
            <div class="slider-range" id="slider-range-<%= feature.id %>"></div>
          </div>
        <% end %>
        <br />
        <input type='submit' value='search' class="search btn btn-primary" />
      </div>
    </div>
    <div class="col-sm-6">
      <div class="row" id="results">

      </div>
    </div>
  </div>
</div>
